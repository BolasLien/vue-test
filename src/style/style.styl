$font = '標楷體'
$bg1 = url('../assets/0401.jpg')
$bg2 = url('../assets/0402.jpg')

#app
    width 1024px
    height 768px
    margin auto

#Top
    width 1024px
    height 120px
    background-image: $bg1
    color: #ffffff
    text-align: center
    line-height 120px
    font-size 52px
    font-family $font
    text-shadow 10px 10px 15px #333333

#Mar
    width 100%
    height 30px
    line-height 30px
    color: #0000ff
    font-size 19px
    font-family $font
    background-image $bg2

#Content
    height 540px
    background-image: $bg2
    table
        margin auto
    tr
        height 150px
    td
        vertical-align: middle
        text-align: center
        &:first-child
            width: 200px
        &:not(:first-child)
            width: 300px
        img 
            height 150px

#Footer
    background-color: #666600
    color: #ffffff
    font-family: $font
    line-height: 2
